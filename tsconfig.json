{
    "compilerOptions": {
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "module": "commonjs",
      "target": "es2015",
      "rootDir": "./src",
      "outDir": "./dist"
    },
    "include": [
      "swagger.json",
      "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ],
    "lib": [
      "es2015"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "express"
    ]
  }